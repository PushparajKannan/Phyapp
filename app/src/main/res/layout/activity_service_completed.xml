<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".ServiceCompletedActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/waterback">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:elevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red">
                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:id="@+id/serv"
                            android:layout_width="match_parent"
                            android:layout_height="70dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="PATIENT DETAILS"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/arima_madurai_bold"
                                />





                        </LinearLayout>

                        <LinearLayout
                            android:layout_below="@id/serv"
                            android:layout_marginTop="10dp"
                            android:id="@+id/service_comp_Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:elevation="10dp"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingLeft="5dp"
                                android:drawablePadding="5dp"
                                android:text="Patient Name"
                                android:drawableLeft="@drawable/ic_person"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                tools:fontFamily="@font/arima_madurai_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:layout_gravity="center"
                                android:layout_weight="0.03"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pat_name_serve_comp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/service_comp_Name"
                            android:id="@+id/service_phy_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:elevation="10dp"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:text="Service name"
                                android:drawablePadding="5dp"

                                android:drawableLeft="@drawable/ic_notification"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                tools:fontFamily="@font/arima_madurai_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:layout_weight="0.03"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pat_service_serve_comp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
 <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/service_phy_name"
                            android:id="@+id/service_phy_rs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:elevation="10dp"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:text="Charge"
                                android:drawablePadding="5dp"

                                android:drawableLeft="@drawable/rupeess"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                tools:fontFamily="@font/arima_madurai_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:layout_weight="0.03"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pat_rs_serve_comp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/service_Date"
                            android:id="@+id/service_visit_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:elevation="10dp"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:text="Time Duration"
                                android:drawablePadding="5dp"

                                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                tools:fontFamily="@font/arima_madurai_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:layout_gravity="center"
                                android:layout_weight="0.03"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pat_time_serve_comp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/service_visit_time"
                            android:id="@+id/service_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:elevation="10dp"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:text="Address"
                                android:drawableLeft="@drawable/ic_person_pin_circle_black_24"
                                android:textColor="@android:color/black"
                                android:drawablePadding="5dp"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                tools:fontFamily="@font/arima_madurai_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:layout_gravity="center"
                                android:layout_weight="0.03"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pat_addre_serve_comp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/service_phy_rs"
                            android:id="@+id/service_Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:elevation="10dp"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:text="Date"
                                android:drawablePadding="5dp"

                                android:drawableLeft="@drawable/ic_today_black_24dp"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                tools:fontFamily="@font/arima_madurai_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:layout_gravity="center"
                                android:layout_weight="0.03"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pat_date_serve_comp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/extser"
                            android:id="@+id/service_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:elevation="10dp"
                            android:minHeight="50dp"
                            android:padding="1dp"
                            >

                            <TextView
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Payment Details"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:elevation="2dp"
                                android:background="@drawable/buttonmini"
                                tools:fontFamily="@font/arima_madurai_bold" />
                            <!--<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:layout_weight="0.03"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>-->
                           <!-- <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:layout_height="0dp"
                                android:text="Pushparaj Kannan"/>-->
                            <RadioGroup
                                android:id="@+id/radiogroups"
                                android:layout_width="200dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_margin="6dp"
                                android:gravity="center"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/pay_cash"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ByCash"
                                    android:buttonTint="@android:color/white"
                                   />
                                <RadioButton
                                    android:id="@+id/pay_card"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ByCard"
                                    android:buttonTint="@android:color/white"
                                   />

                            </RadioGroup>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:id="@+id/extser"
                            android:layout_below="@id/service_location"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:id="@+id/add"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:background="@drawable/buttonmini"
                                >
                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="Add services"/>
                                <ToggleButton
                                   android:layout_weight="1"
                                    android:id="@+id/serviceonoff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/addingleni"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">



                            <LinearLayout
                                android:layout_margin="5dp"
                                android:id="@+id/insert_point"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                >
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/bg_spinner">
                                    <Spinner

                                        android:id="@+id/servivcelist"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:layout_height="25dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_spinner">
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:id="@+id/servicessub"
                                        android:layout_weight="1"


                                        android:layout_height="25dp"
                                        />
                                </LinearLayout>

<EditText
    android:id="@+id/rsedit"
                                    android:layout_width="50dp"
    android:hint="Rs"
    android:inputType="number"
    android:gravity="center"
    android:background="@drawable/bg_spinner"
    android:singleLine="true"

    android:layout_height="25dp"
   />
                            </LinearLayout>

                                <TextView
                                    android:id="@+id/addlayout"
                                    android:layout_width="70dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="ADD"
                                    android:textColor="#dd0000"
                                    android:background="@drawable/buttonmini"/>

                                </LinearLayout>


                        </LinearLayout>


