<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="450dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_otp_verifys"
    app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#90FFFFFF"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yellow">

            <ImageView
                android:id="@+id/img"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/sss"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/te"
                android:layout_marginTop="20dp"
                android:layout_below="@id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP Send To"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:textColor="#656565"/>

            <TextView
                android:id="@+id/otpsend_number_alert"
                android:layout_marginTop="10dp"
                android:layout_below="@id/te"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91-9876543210"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"/>




            <EditText

                android:id="@+id/otp_alert"
                android:background="@drawable/editbackground"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Enter OTP"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"/>

            <LinearLayout

                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/otp_alert"
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center|end"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Didnot receive the code?"
                    />
                <TextView
                    android:id="@+id/resend_otp_alert"
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonresend"
                    android:text="Resend"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="start"/>
            </LinearLayout>







            <TextView
                android:id="@+id/phy_sub1_alert"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttonstyle"
                android:text="Submit"
                android:gravity="center"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"/>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>


