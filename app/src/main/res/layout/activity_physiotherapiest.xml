                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:textSize="13sp"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/headingtext"
                        android:id="@+id/patient_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:elevation="10dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:text="Address"
                            android:drawableLeft="@drawable/ic_person_pin_circle_black_24"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            tools:fontFamily="@font/arima_madurai_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:layout_weight="0.03"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/pad_add"
                            android:textSize="13sp"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>


  <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/headingtext"
                        android:id="@+id/ask_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:elevation="10dp"
      android:visibility="gone"
                        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

                        <TextView
                            android:elevation="5dp"
                           android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Ask Number"
                            android:background="#90FFFFFF"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            tools:fontFamily="@font/arima_madurai_bold" />
      </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:layout_weight="0.03"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:textSize="13sp"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="7845xxxxxx"/>

                    </LinearLayout>

 <LinearLayout


