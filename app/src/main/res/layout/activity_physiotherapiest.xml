                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/get_direction"
                                android:elevation="2dp"
                                android:layout_width="170dp"
                                android:layout_height="30dp"
                                android:text="GET DIRECTION"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/buttonorange"
                                android:layout_gravity="center"
                                android:drawableRight="@drawable/ic_room_black_24dp"/>



                            <TextView
                              android:visibility="gone"
                                android:id="@+id/recahedlocation"
                                android:elevation="5dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="Click If Location Reached"
                                android:background="@drawable/buttonmini"
