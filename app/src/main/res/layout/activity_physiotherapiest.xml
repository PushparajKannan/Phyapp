            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="PATIENT DETAILS"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/arima_madurai_bold"
                       />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:id="@+id/patient_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:elevation="10dp"
                        >

                        <TextView
                            android:drawableLeft="@drawable/ic_person"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:text="Name"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            tools:fontFamily="@font/arima_madurai_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_weight="0.03"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/pad_name"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:textSize="13sp"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:id="@+id/patient_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:elevation="10dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_notifications_black_24dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="Service"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            tools:fontFamily="@font/arima_madurai_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:layout_weight="0.03"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/pad_ser"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/headingtext"
                        android:id="@+id/patient_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:elevation="10dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:drawableLeft="@drawable/ic_today_black_24dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Date"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            tools:fontFamily="@font/arima_madurai_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:layout_weight="0.03"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/pad_date"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/headingtext"
                        android:id="@+id/patient_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:elevation="10dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
