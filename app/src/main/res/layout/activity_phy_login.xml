<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".PhyLoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/waterback">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/yellow">
                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:descendantFocusability="beforeDescendants"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imglogo"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/lowlogo"/>




                        <EditText
                            android:layout_below="@+id/imglogo"
                            android:layout_marginTop="50dp"
                            android:id="@+id/edit1"
                            android:background="@drawable/editbackground"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="60dp"
                            android:hint="Username"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp"
                            android:drawablePadding="20dp"/>

                        <EditText
                            android:id="@+id/edit2"
                            android:layout_below="@id/edit1"
                            android:background="@drawable/editbackground"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="60dp"
                            android:hint="Password"
                            android:singleLine="true"
                            android:isScrollContainer="true"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:drawablePadding="20dp"/>

                        <TextView
                            android:id="@+id/phy_login"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:background="@drawable/buttonstyle"
                            android:text="LOG IN"
                            android:gravity="center"
                            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:padding="4dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/edit2"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:elevation="5dp"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_margin="40dp"
                            android:id="@+id/forgot_phy"
                            android:layout_below="@+id/phy_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Forgot Password?"
                            android:textStyle="italic"
                            tools:fontFamily="@font/alegreya" />

                      <!--  <Button
                            android:id="@+id/conforot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Consult For Others"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/button2"
                            android:layout_margin="50dp"
                            android:textColor="#FFFFFF"
                            />-->




                    </RelativeLayout>

                </ScrollView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>