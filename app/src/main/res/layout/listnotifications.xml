        <View
            android:elevation="1dp"
            android:layout_below="@id/Phy_direction"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/Red"/>


    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/Phy_direction"
        android:id="@+id/get_direction_phy_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_spinner"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:id="@+id/location_get"
            android:layout_width="match_parent"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_room"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Trace physiotherapist"/>

        <TextView

            android:layout_marginRight="16dp"
            android:id="@+id/get_direction_phy"
            android:gravity="center"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get direction"
            android:textColor="#ffffff"
            android:background="@drawable/mapproceedbtn"/>


    </LinearLayout>

    </RelativeLayout>
