<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listses_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#60FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/name_service"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listses_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_down"
            android:textColor="@android:color/black"
            android:paddingLeft="20dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/llExpandArea_service"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Red"/>
    <RelativeLayout
        android:layout_gravity="end|center"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center">
        <TextView
            android:elevation="3dp"
            android:id="@+id/get_help"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonmini"
            android:text="GET HELP"
            android:textColor="@color/Red"/>
        </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center">

            <TextView
                android:elevation="3dp"
                android:id="@+id/morality"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/buttonmini"
                android:text="MODALITY"
                android:textColor="@color/Red"
                />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

